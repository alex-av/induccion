section
    div.img
        width 100%
        height 30em
        overflow-x hidden
        overflow-y hidden
        display block
        img
            display inline-block
            height  100%
            transition: transform 0.6s ease-out
            image-rendering crisp-edges
        img.imagen-slide
            max-width initial !important
            height 100%
    .slider
        margin 1em 0

.ia-boton-drag-container
    text-align center
    i
        font-size 1.5em
        line-height 0
        display inline-block
        transform translateY(0.2em)
.ia-boton-drag
    background-color gris_textos
    display inline-block
    color white
    padding 0.5em 1.5em 0.8em 1em
    border-radius 0 0 0.5em 0.5em
    font-weight bold