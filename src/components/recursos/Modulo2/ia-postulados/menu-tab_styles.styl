.theme--light.v-tabs > .v-tabs-bar .v-tab:not(.v-tab--active), .theme--light.v-tabs > .v-tabs-bar .v-tab:not(.v-tab--active) > .v-icon, .theme--light.v-tabs > .v-tabs-bar .v-tab--disabled 
    text-transform initial
    i
        color violeta_rosa
        padding 0

.v-tab.v-tab--active
    text-transform initial
    background-color gris_textos
    border-radius 0em 0.5em 0.5em 0
    i
        padding 0

    .v-icon.ia-icon
        color inherit
.tabs-menu
    text-align justify
    color #525e74


.ia-estrofa
    max-width 200px
    margin-right 2em
.play-song
    font-weight bold
    background-color gris_fondos
    color gris_textos
    i
        color violeta_medio
    i.runningAudio
        color verde_main
.v-tab
    justify-content flex-start

.ia-tab-container
    ul
        list-style none
        li
            padding 0.6em 0
            position relative
            margin-left 0.5em
            &::before
                content '\F1F5'
                font-family iconos
                position absolute
                transform translate(-1.5em, -0.3em)
                font-size 1.5em
                color verde_main