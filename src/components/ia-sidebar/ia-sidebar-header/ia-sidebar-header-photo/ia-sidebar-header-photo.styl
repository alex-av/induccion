// Styles for ia-sidebar-header-photo
//contenedor de la imagen
.ia-user-img-container
    // background-color red //** BORRAR **//
    display inline-block
    position relative
    &::after
        // Blocked content ""
        display block
        position absolute
        width 30px
        height 30px
        background-color verde_main
        bottom 0
        right 10px
        border-radius 100%
  // elemento img
    .ia-user-image
        width 72px
        height 72px
        border-radius 100%
        display block
        border-width 4px
        border-style solid
        border-color rojo_principal
