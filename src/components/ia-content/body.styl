//Contenido del cuerpo
section.ia-content-body--container
    position absolute
    top 160px
    bottom 0
    left 0
    right 0px
    overflow-y: auto
    text-align justify
    .ia-content-body--container__scrolled
        position relative
        color gris_textos

    h1 
        font-size 2em
        display block
    h2
        font-size 2em
    h3
        font-size 1.5em
        padding 1em 0
        color gris_h3
    h4
        font-size 1.2em
        color gris_h4
    h5
        font-size 1.1em
        color gris_h5
        
    img
        max-width 100%;
        height auto
    
    .actividad
        background fondo_actividad
        padding 0.5em 1em
        border-radius 0.5em
        margin 1em 0
        p
            margin 0
    i
        padding 0.4em 0.6em
        border-radius 0.2em

    .ia-block
        .ia-block-container-cifras
            transition all 0.2s ease-in-out
            border-radius 1em
            background-color #fff
            &:hover
                transform scale(1.2)
                box-shadow 0 0 1em -0.5em rgba(0,0,0,0.2)

    .ia-medios-y-canales
        position relative
        padding 1.5em 0
        .personaje-flotante
            position absolute
            bottom 0
            right 0
            img
                max-width 100%
                width auto
        .ia-icon
            font-size 2em
        &>div
            .ia-logo-social-container
                padding-bottom 1em
                border 1px solid rgba(0,0,0,0.05)
                h5
                    margin-bottom 1em
    .ia-container-estructura
        .imagen-foto
            img
                border-radius .4em
                box-shadow 0 0 0.2em 0 rgba(0,0,0,0.15)
        .ia-card

            transition transform 0.6s ease-in-out
            .contenedor-card 
                transition transform 0.2s ease-in-out
            &:hover .contenedor-card 
                background-color fondo_actividad
                transform scale(1.05)
                border-radius 1em
                h4
                    display inline-block
                    color gris_h4
                    border-radius 0.5em
                    font-weight normal
                    font-size 1.5em
            .nombre
                font-size 1.1em
                color gris_iconos
    .ia-ul-lists
        li
            list-style-type none
    .ia-estatuto
        position relative
        .container
            align-items start
        .ia-personaje
            img
                max-width 100%
                width auto
                height auto 
    // Bloque estatutos
    .ia-estatutos-generales
        position relative
        .ia-personaje-flotante.ia-estatuto-personaje
            img
                max-width 85%
        .ia-personaje-flotante
            position absolute
            transform rotateY(180deg) translate(2em, -2.5em)
            right -1em
            top -11em
        ul
            margin 0
            li
                padding 0.5em
                border-bottom 1px dashed rgba(0,0,0,0.09)
                position relative
                &:before
                    content '\F0C1'
                    color verde_main
                    font-family iconos
                    position absolute
                    left -1em
                    transform translateY(-.2em)
                    font-size 1.5em
            &.ia-ul-list-inverted
                li
                    &:before
                        content ''
                    &:after
                        content '\F0C1'
                        color verde_main
                        font-family iconos
                        position absolute
                        right -1em
                        transform translateY(-.2em)
                        font-size 1.5em

        .ia-enlace-destacado
            a
                background-color rojo_vermellon
                color #ffffff
                display inline-block
                padding 4.5em 1em 1em 1em
                text-decoration none
                border-radius 0.5em
                font-weight bold
                font-size 1.3em
                text-align center
                box-shadow 0 1em 0 0 rojo_vinotinto
                position relative
                transition: all 0.2s ease-in-out
                &:before
                    content '\FEA1'
                    font-family iconos
                    position absolute
                    font-size 3em
                    top 0
                    left calc(50% - 0.5em)
                    transition: all 0.2s ease-in-out
                &:hover
                    background-color rojo_vinotinto
                    transform scale(1.3)
                    &:before
                        color ocre_leche
                        transform scale(1.1)

    // Gestión Ambiental
    .ia-ambiental
        .personaje
            transform rotateY(180deg)
        ul
            margin 0
            li
                padding 0.5em
                border-bottom 1px dashed rgba(0,0,0,0.09)
                position relative
                &:before
                    content '\F32A'
                    color verde_main
                    font-family iconos
                    position absolute
                    left -1em
                    transform translateY(-.2em)
                    font-size 1.5em
    .ia-politica-ambiental
        .container
            align-items center
        iframe
            max-width 100%
            display block
            min-height initial

    // Saber más
    .ia-saber-mas
            .item
                border-bottom 1px solid rgba(0,0,0,0.05)
            .ia-iconos
                position relative
                a
                    min-width 40px
                    min-height 10px
                    display inline-block
                    i
                        font-size 2.5em
                        padding 0
                        position absolute
                        top -0.1em
    // Datos de contacto
    .info-contacto
        background-color rgba(20, 220, 180, 0.08)
        border-radius 0.4em
        margin-top 1em
        .informacion
            display flex
            align-items center
            i
                font-size 1.8em
                display inline-block
                padding 0.2em 0.2em 0.2em 0.2em
                color verde_main

            span
                display inline-block
                padding 0.8em 0.2em
                margin 0 0.2em
                a
                    margin 0 0.5em

    // Servicio al usuario
    .servicio-usuario
        .info-contenido
            .ul-list
                padding 0em 2.6em
                column-count 2
                column-gap 92px
                list-style none
                li
                    position relative
                    &:before
                        content '\FE6E'
                        position absolute
                        transform translateX(-1.5em)
                        font-family iconos
                        color verde_main
    // Conoce los valores del código de integridad
    .ia-valores-codigo
        .ia-personaje
            img
                transform rotateY(180deg)
    .comite-convivencia
        iframe
            max-width 100%
            display inline-block

    // quienes conforman el comité
    .quienes-comite
        .comite-content
            .ul-list
                list-style none
                li
                    padding 0.5em 0
                    position relative
                    &:before
                        content '\FE6E'
                        position absolute
                        transform translateX(-2em)
                        font-family iconos
                        font-size 1.3em
                        color verde_main

    // Reconoce tus derechos al ser investigado
    .ia-reconoce
        .ul-list
            list-style none
            margin-left 1em
            li
                padding 0.5em 0
                position relative
                &:before
                    content '\FE6E'
                    position absolute
                    transform translateX(-2em)
                    font-family iconos
                    font-size 1.3em
                    color verde_main
    .otros-servicios
        .list-clean
            list-style none
            margin 0
            padding 0
            i
                font-size 1.6em
                line-height 0
                transform translateY(0.2em)
                display inline-block
                color gris_h4

    .datos-interes-fichas
        .texto
            margin 0.8em 0 0 0
