/* Enter and leave animations can use different */
/* durations and timing functions.              */
.slide-fade-enter-active {
  transition: all .3s ease;
}
.slide-fade-leave-active {
  transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0);
}
.slide-fade-enter, .slide-fade-leave-to
/* .slide-fade-leave-active below version 2.1.8 */ {
  transform: translateX(10px);
  opacity: 0;
}

.foto-base
    display inline-block
    background-color verde_main
    width 300px
    height 300px

.contact-icon
    line-height 0
    font-size 1.5em
    position relative
    display inline-block
    color verde_main
    transform translateY(0.2em)
.v-application a.ia-btn-link, .v-application a.ia-btn-attachment
    background-color verde_main
    color #fff
    display inline-block
    padding 0.6em 1.5em 0.6em 3em
    text-decoration none
    border-radius 0.4em
    font-weight bold
    position relative
    cursor pointer
    transition all 0.4s ease-in-out
    box-shadow 0 0.8em 0 0em #10a98a
    margin-bottom 0.8em 
    &::before
        content '\F337'
        position absolute
        font-family iconos
        transform translate(-1.5em, -0.2em)
        font-size 1.2em
    &:hover
        background-color gris_h5
        box-shadow 0 0.8em 0 0em #354d58


.v-application a.ia-btn-attachment
    background-color verde_main
    &::before
        content '\F066'


    span
        color #fff
.ia-video-btn
    border 2px solid gris_h5
    display inline-block
    padding-right 1em
    border-radius 0.4em
    cursor pointer
    font-weight bold
    i
        font-size 1.4em
        line-height 0
        transform translateY(0.2em)
        position relative
        display inline-block

.ia-border-btn
    border 2px solid verde_main
